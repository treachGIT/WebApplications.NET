@page
@model LataPrzestepne.Pages.LastSearchModel

@{
    ViewData["Title"] = "List";
}

<h1>Historia wyszukiwania</h1>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Birthdays[0].Year)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Birthdays[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Birthdays[0].Surname)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Birthdays[0].CreatedDate)
            </th>
            <th>
                Wynik
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Birthdays) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Year)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Surname)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CreatedDate)
            </td>
               <td>
                @item.GetMessageForHistory()
            </td>
            <td>
                <a asp-page="./Delete" asp-route-id="@item.Id">Usuń</a>
            </td>
        </tr>
}
    </tbody>
</table>